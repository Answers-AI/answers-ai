{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "DB_STUDIO_SERVER_URL",
    "OPENAI_API_KEY",
    "PINECONE_API_KEY",
    "PINECONE_ENVIRONMENT",
    "PINECONE_INDEX",
    "INNGEST_SIGNING_KEY",
    "INNGEST_EVENT_KEY",
    "INNGEST_SERVER_URL",
    "GITHUB_ID",
    "GITHUB_SECRET"
  ],
  "pipeline": {
    "//#dev-docker": { "cache": false },
    "//#dev-inngest": { "cache": false },
    "//#dev-langchain": { "cache": false },
    "//#db:healthcheck": { "cache": false },
    "build": {
      "outputMode": "new-only",
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "db:generate": {
      "cache": false,
      "dependsOn": ["db:deploy"],
      "outputs": ["dist/**"]
    },
    "db:migrate": {
      "cache": false,
      "dependsOn": [],
      "outputs": []
    },
    "db:deploy": {
      "cache": false,
      "dependsOn": [],
      "outputs": ["dist/**"]
    },
    "db#build": {
      "outputMode": "new-only",
      "dependsOn": [],
      "outputs": ["dist/**"]
    },
    "db#dev": {
      "dependsOn": ["//#db:healthcheck", "build"],
      "cache": false,
      "outputs": ["dist/**"]
    },
    "web#build": {
      "dependsOn": ["^build", "db#build"],
      "outputs": ["dist/**", ".next/**"]
    },

    "lint": {
      "outputs": []
    },
    "start": {
      "dependsOn": ["^build", "build"],
      "outputs": ["dist/**", ".next/**"],
      "cache": false
    },
    "dev": {
      "dependsOn": ["^build"],
      "persistent": true,
      "cache": false
    }
  }
}
