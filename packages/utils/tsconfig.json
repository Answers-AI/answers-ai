{
  "compilerOptions": {
    "lib": ["dom", "es2021"],
    "outDir": "./dist",
    "allowJs": true,
    "isolatedModules": false,
    "paths": {
      "@utils/*": ["../../packages/utils/src/*"],
      "@ui/*": ["../../packages/ui/src/*"],
      "@db/*": ["../../packages/db/src/*"],
      "canvas": ["./node_modules/@napi-rs/canvas"]
    }
  },
  "exclude": ["node_modules"],
  "extends": "tsconfig/node.json",
  "include": ["src"],
  "types": ["node", "types"]
}
