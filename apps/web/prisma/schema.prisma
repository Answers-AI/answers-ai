generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://example_user:example_password@localhost:5432/example_db?schema=public"
}

model User {
  id            Int         @id @default(autoincrement())
  username String @unique
  email         String      @unique
  name          String?
  appSettings Json
  
}

model AppSettings {
  id             Int          @id @default(autoincrement())
  services       AppService[]
  jiraSettings   JiraSettings @relation(fields: [jiraSettingsId], references: [id])
  // User           User[]
  jiraSettingsId Int
}

model AppService {
  id            Int          @id @default(autoincrement())
  name          String
  enabled       Boolean
  AppSettings   AppSettings? @relation(fields: [appSettingsId], references: [id])
  appSettingsId Int?
}

model JiraSettings {
  id          Int                  @id @default(autoincrement())
  projects    JiraProjectSetting[]
  AppSettings AppSettings[]
}

model JiraProjectSetting {
  id             Int           @id @default(autoincrement())
  key            String
  enabled        Boolean
  JiraSettings   JiraSettings? @relation(fields: [jiraSettingsId], references: [id])
  jiraSettingsId Int?
}
