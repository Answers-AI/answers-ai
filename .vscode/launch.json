{
  "version": "0.2.0",
  "tasks": {
    "clearNextFolder": {
      "label": "Clear .next folder",
      "type": "shell",
      "command": "rm -rf apps/web/.next"
    }
  },
  "configurations": [
    {
      "name": "AnswerAI: debug server-side",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpm run dev"
    },
    {
      "name": "AnswerAI: debug client-side",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4000"
    },
    {
      "name": "AnswerAI: debug full stack",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpm run dev",
      "preLaunchTask": "Clear .next folder",
      "serverReadyAction": {
        "pattern": "started server on .+, url: (https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    }
  ]
}
