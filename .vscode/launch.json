{
  "version": "0.2.0",
  "tasks": {
    "clearNextFolder": {
      "label": "Clear .next folder",
      "type": "shell",
      "command": "rm -rf apps/web/.next"
    }
  },
  "configurations": [
    {
      "name": "AnswerAI: dev",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["dev"],
      "runtimeVersion": "21",
      "timeout": 30000,
      "stopOnEntry": false,
      "sourceMaps": true,
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "smartStep": true,
      "serverReadyAction": {
        "pattern": "started server on .+, url: (https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    }
  ]
}
